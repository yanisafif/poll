@using Poll.Services.ViewModel;
@model VoteViewModel
@{
    ViewData["Title"] = "Voter";
}

<h1>@ViewData["Title"]</h1>
<hr />
<h4>@Model.PollName</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Vote" asp method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="choice-container">
                <input type="hidden" asp-for="IsMultipleChoice">
                @if(Model.IsMultipleChoice)
                {
                    @for (int i = 0; i < Model.Choices.Count(); i++)
                    {
                        <div class="form-group">
                            <input type="checkbox" asp-for="@Model.Choices[i].Selected"/>
                            <label class="control-label"> @Model.Choices[i].Name </label>
                            <input type="hidden" asp-for="@Model.Choices[i].Id" />
                            <span asp-validation-for="Choice" class="text-danger"></span>
                        </div>
                    }
                }
                else 
                {
                    @foreach (ChoiceViewModel item in Model.Choices)
                    {
                        <div class="form-group">
                            <input type="radio" asp-for="Choice" id="Choice" value="@item.Id" name="Choice"/>
                            <label class="control-label"> @item.Name </label>
                            <span asp-validation-for="Choice" class="text-danger"></span>
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

