@model Poll.Services.ViewModel.AddSurveyViewModel

@{
    ViewData["Title"] = "Créer un sondage";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsMultipleChoices" class="control-label"></label>
                <input asp-for="IsMultipleChoices" class="form-control" />
                <span asp-validation-for="IsMultipleChoices" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsPrivate" class="control-label"></label>
                <input asp-for="IsPrivate" class="form-control" />
                <span asp-validation-for="IsPrivate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeactivateDate" class="control-label"></label>
                <input asp-for="DeactivateDate" class="form-control" />
                <span asp-validation-for="DeactivateDate" class="text-danger"></span>
            </div>
            <span asp-validation-for="Choices" class="text-danger"></span>
            <div id="choice-container">
                <div class="form-group" id="choice1">
                    <label class="control-label"> Choix 1</label>
                    <input asp-for="Choices[0]" class="form-control" maxlength="50" />
                </div>
                <div class="form-group" id="choice2">
                    <label class="control-label"> Choix 2</label>
                    <input asp-for="Choices[1]" class="form-control" />
                    <span asp-validation-for="Choices[1]" class="text-danger" maxlength="50"></span>
                </div>
            </div>
            <div class="mb-4 pointer">
                <a class="link" onclick="addChoice()" > + Ajouter un choix</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer le sondage" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
     <script type="text/javascript" src="/js/Survey/Create.js"></script>
}